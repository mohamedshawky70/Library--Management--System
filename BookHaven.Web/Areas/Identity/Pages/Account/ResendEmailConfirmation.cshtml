@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend email confirmation";
}

<div class="d-flex flex-column flex-root" id="kt_app_root">
    <!--begin::Page bg image-->
    <style>
        body {
            background-image: url('/mecatronic/img/modern-technology-email-background_693425-10221.jpg');
            background-size: cover; /* This ensures the image covers the entire screen */
     
        }

        [data-bs-theme="dark"] body {
            background-image: url('/mecatronic/img/modern-technology-email-background_693425-10221.jpg');
            background-size: cover; /* This ensures the image covers the entire screen */
      
        }
    </style>
    <!--end::Page bg image-->
    <!--begin::Authentication - Signup Welcome Message -->
    <div class="d-flex flex-column flex-center flex-column-fluid">
        <!--begin::Content-->
        <div class="d-flex flex-column flex-center text-center p-10">
            <!--begin::Wrapper-->
            <div class="card card-flush w-md-650px py-5">
                <div class="card-body py-15 py-lg-20">
                    <!--begin::Logo-->
                    <div class="mb-7">
                            <img src="~/mecatronic/img/boohaven.png" class="h-100px" />
                    </div>
                    <!--end::Logo-->
                    <!--begin::Title-->
                    <h1 class="fw-bolder text-gray-900 mb-5">
                        Verify your Email
                    </h1>
                    <!--end::Title-->
                    <!--begin::Text-->
                    <div class="fw-semibold fs-6 text-gray-500 mb-7">
                        Resend and check your email!
                    </div>
                    <!--end::Text-->
                    <!--begin::Illustration-->
                    <div class="mb-0">
                        <img src="~/mecatronic/img/email campaign-amico.png" class="mw-100" style="height: 210px;" />
                    </div>
                    <!--end::Illustration-->
                    <!--begin::Link-->
                    <form method="post" asp-page="./ResendEmailConfirmation">
                        <input asp-for="Input.Email" type="hidden" class="form-control"  />
                        <div class="mb-0">
                            <button type="submit"class="btn btn-sm btn-primary">Resend</button>
                        </div>
                    </form>
                    <!--end::Link-->

                </div>
            </div>
            <!--end::Wrapper-->
        </div>
        <!--end::Content-->
    </div>
    <!--end::Authentication - Signup Welcome Message-->
</div>