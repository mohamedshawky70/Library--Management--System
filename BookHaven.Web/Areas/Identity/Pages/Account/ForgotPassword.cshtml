@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}


<div class="d-flex flex-column flex-root">
	<!--begin::Page bg image-->
	<!--end::Page bg image-->
	<!--begin::Authentication - Sign-in -->
	<div class="d-flex flex-column flex-lg-row flex-column-fluid">
		<!--begin::Aside-->
		<div class="d-flex flex-lg-row-fluid">
			<!--begin::Content-->
			<div class="d-flex flex-column flex-center pb-0 pb-lg-10 p-10 w-100">
				<!--begin::Image-->
				<img class="theme-light-show mx-auto mw-100 w-150px w-lg-500px mb-10" src="~/mecatronic/img/reset password-pana.png" alt="" />
				<!--end::Image-->
				<!--begin::Title-->
				<h1 class=" fs-2qx fw-bold text-center mb-7" style="font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;color:burlywood">BookHaven, by Mohmed Shawky</h1>
				<h1 class=" fs-2qx fw-bold text-center mb-7" style="font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;color:burlywood">Book & Coffee</h1>
				<!--end::Title-->

			</div>
			<!--end::Content-->
		</div>
		<!--begin::Aside-->
		<!--begin::Body-->
		<div class="d-flex flex-column-fluid flex-lg-row-auto justify-content-center justify-content-lg-end p-12">
			<!--begin::Wrapper-->
			<div class="bg-body d-flex flex-center rounded-4 w-md-600px p-10">
				<!--begin::Content-->
				<div class="w-md-400px">
					<!--begin::Form-->
					<form class="form w-100" novalidate="novalidate" id="kt_sign_in_form" method="post">
						<!--begin::Heading-->
						<div class="text-center mb-11">
							<img src="~/Mecatronic/Img/BooHaven.png" class="w-250px mb-10" />
							<!--begin::Title-->
							<h1 class="text-dark fw-bolder mb-3">Forget Password?</h1>
							<h3 class="text-active-gray-100  mb-3">Enter your email to reset password</h3>
							<!--end::Title-->
						</div>
						<!--begin::Heading-->
						<!--begin::Input group=-->
						<div class="fv-row mb-8">
							<!--begin::Email-->
							<input type="text" placeholder="Email" asp-for="Input.Email" autocomplete="off" class="form-control bg-transparent" />
							<span asp-validation-for="Input.Email" class="text-danger"></span>
							<!--end::Email-->
						</div>
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>
						<!--end::Input group=-->
						<!--begin::Wrapper--
						<!--end::Wrapper-->
						<!--begin::Submit button-->
						<div class="d-grid row">
							<button type="submit" id="kt_sign_in_submit" class="btn btn-primary col-5" style="position: relative;left: 12px;">
								<!--begin::Indicator label-->
								<span class="indicator-label">Reset passowrd</span>
								<!--end::Indicator label-->
							</button>
							<a class="btn btn-secondary col-4" style="position: relative;left: 269px;top: -40px;" asp-page="./Login">Cancel</a>
						</div>
						<!--end::Submit button-->
					</form>
					<!--end::Form-->
				</div>
				<!--end::Content-->
			</div>
			<!--end::Wrapper-->
		</div>
		<!--end::Body-->
	</div>
	<!--end::Authentication - Sign-in-->
</div>
