@section style
{
    <link href="~/css/examples.css" rel="stylesheet" />
}
@{
    ViewData["Title"] = "Find a book";
}
<div class="card mb-12">
    <div class="card-header">
        <div class="card-title">
            <img src="~/mecatronic/img/opened-book-with-a-magnifier1.png" style="width: 24px;position: relative;left: -3px;" />
            <h3>Find a book</h3>
        </div>
    </div>
    <!--begin::Hero body-->
    <div class="card-body flex-column p-5">
        <!--begin::Hero content-->
        <div class="d-flex align-items-center h-lg-300px p-5 p-lg-15">
            <!--begin::Wrapper-->
            <div class="d-flex flex-column align-items-start justift-content-center flex-equal me-5">
                <!--begin::Title-->
                <h1 style="padding-left: 21px;" class="fw-bold fs-4 fs-lg-1 text-gray-800 mb-5 mb-lg-10">Find a book</h1>
                <!--end::Title-->
                <!--begin::Input group-->
                <div class="position-relative w-100">
                    <i class="bi bi-search text-primary fs-4" style="position: relative; left: 32px;z-index: 11;"></i>
                    <input id="Search" type="text" class="typeahead form-control fs-4 py-4 ps-14 text-gray-700 placeholder-gray-500 mw-500px" style="width: 440px;height: 55px;" placeholder="find a book by title or auther name"/>
                </div>
                <!--end::Input group-->
            </div>
            <!--end::Wrapper-->
            <!--begin::Wrapper-->
            <div class="flex-equal d-flex justify-content-center align-items-end ms-5">
                <!--begin::Illustration-->
                <img class="mw-100 h-225px mx-auto mb-lg-n18" src="/mecatronic/img/telescope.png" style="transform: scalex(-1);">                <!--end::Illustration-->
            </div>
            <!--end::Wrapper-->
        </div>
        <!--end::Hero content-->

    </div>
    <!--end::Hero body-->
</div>
@section Scripts
{
    <script src="~/lib/typeahead.js/typeahead.bundle.min.js"></script>
    <script src="~/js/search.js"></script>
}