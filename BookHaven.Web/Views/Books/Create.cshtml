            <!--end::Image input placeholder-->
            <!--begin::Image input-->
            <div class="image-input image-input-outline mb-4" data-kt-image-input="true">
                <!--begin::Image preview wrapper-->
                <input asp-for="@Model.Img" type="hidden"/>
                <div class="image-input-wrapper w-200px" style="height:299px; background-image: url(@(Model?.Img != null ? $"/Images/Book/{Model.Img}" : "/Images/Book/image-placeholder.jpg"))"></div>
                <!--end::Image preview wrapper-->
                <!--begin::Edit button-->
                <label class="btn btn-icon btn-circle btn-color-muted btn-active-color-primary w-25px h-25px bg-body shadow"
                       data-kt-image-input-action="change"
                       title="Change avatar">
                    <i class="bi bi-pen"></i>
                    <!--begin::Inputs-->
                    <input type="file" asp-for="FormImg" accept=".png, .jpg, .jpeg" />
                    <input type="hidden" name="avatar_remove" />
                    <!--end::Inputs-->
                </label>
                <!--end::Edit button-->
                <!--begin::Cancel button-->
                <span class="btn btn-icon btn-circle btn-color-muted btn-active-color-primary w-25px h-25px bg-body shadow"
                      data-kt-image-input-action="cancel"
                      title="Cancel avatar">
                    <i class="bi bi-x-circle fs-3"></i>
                </span>
                <!--end::Cancel button-->
                <!--begin::Remove button-->
                @* <span class="btn btn-icon btn-circle btn-color-muted btn-active-color-primary w-25px h-25px bg-body shadow"
                data-kt-image-input-action="remove"
                title="Remove avatar">
                <i class="bi bi-x-circle fs-4"></i>
                </span> *@
                <!--end::Remove button-->
            </div>
            <div><span class="text-danger" asp-validation-for="Img"></span></div>
            @* في الايدت الصوره مبترجعش فبرجعها عن طريق ده ومبظهرهوش *@<input asp-for="Img" type="hidden" />
            <!--end::Image input-->   
            <div class="form-text mb-5">Allowed file types:jpg , jpeg ,png and max size in 2MB</div>
            <div class="row">
                <div class="col-5">
                    <div class="mb-3 col">
                        <label asp-for="Title" class="form-label"></label>
                        <input asp-for="Title" type="text" class="form-control form-control-solid " placeholder="Title">
                        <div><span class="text-danger" asp-validation-for="Title"></span></div>
                    </div>
                    <div class="mb-3 col">
                        <label asp-for="AuthorId" class="form-label">Select Author</label>
                        <select asp-for="AuthorId" asp-items="AuthorList" class="form-select form-select-solid Js_select2" data-placeholder="Select an Author">
                            <option value=""></option>
                        </select>
                        <div><span class="text-danger" asp-validation-for="AuthorId"></span></div>
                    </div>
                    
                    <div class="mb-3 col">
                        <label asp-for="Publisher" class="form-label"></label>
                        <input asp-for="Publisher" type="text" class="form-control form-control-solid " placeholder="Publisher">
                        <div><span class="text-danger" asp-validation-for="Publisher"></span></div>
                    </div>
                    @if(Model is null)
                    {
                        <div class="mb-3 col">
                            <label asp-for="PublishingDate" class="form-label"></label>
                            <input asp-for="PublishingDate" type="text" class="form-control form-control-solid" autocomplete="off" id="SingleDataPicker" />
                            <div><span class="text-danger" asp-validation-for="PublishingDate"></span></div>
                        </div>
                    }
                    else
                    {
                        <div class="mb-3 col">
                            <label asp-for="PublishingDate" class="form-label"></label>
                            <input asp-for="PublishingDate" type="date" class="form-control form-control-solid" autocomplete="off" />
                            <div><span class="text-danger" asp-validation-for="PublishingDate"></span></div>
                        </div>
                    }
                    @*   Simple preview image *@
