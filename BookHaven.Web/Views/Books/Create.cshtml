                    onchange="document.getElementById('DefualtCover').src=window.URL.createObjectURL(this.files[0])" />
                    <div><span class="text-danger" asp-validation-for="Img"></span></div>
                    </div> *@

                    <div class="mb-3 col">
                        <label asp-for="CategoryId" class="form-label">Select Category</label>
                        <select asp-for="CategoryId" asp-items="CategoriesList" class="form-select form-select-solid Js_select2" data-placeholder="Select categories"></select>
                        <div><span class="text-danger" asp-validation-for="CategoryId"></span></div>
                    </div>
                    <div class="mb-3 col">
                        <label asp-for="Hall" class="form-label"></label>
                        <input asp-for="Hall" type="text" class="form-control form-control-solid " placeholder="Hall">
                        <div><span class="text-danger" asp-validation-for="Hall"></span></div>
                    </div>
                    <div class="mb-3 col form-switch mr-10 mb-10">
                        <input asp-for="IsAvailableForRental" class="form-check-input" type="checkbox">
                        <label asp-for="IsAvailableForRental" class="form-check-label"></label>
                        <div><span class="text-danger" asp-validation-for="IsAvailableForRental"></span></div>
                    </div>
                </div>
                <div class="col-7">
                    <div class="mb-3 col">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" type="text" id="kt_docs_tinymce_basic" class="form-control form-control-solid " placeholder="Description"></textarea>
                        <div><span class="text-danger" asp-validation-for="Description"></span></div>
                    </div>
                </div>
            </div>  
        </form>

    </div>
    <div class="card-footer">
        <button type="submit" class="btn btn-primary" form="bookForm"><i class="bi bi-check2-all fs-3"></i>Save</button>
        <a class="btn btn-light text-primary m-3" asp-controller="Books" asp-action="Index">Cancel</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/site.js"></script>
    
}

