    </div>
    <div class="card card-bordered">
        <div class="card-header">
            <h3 class="card-title">
                <!--begin::Search-->
                <div class="d-flex align-items-center position-relative my-1">
                    <input type="text" data-kt-filter="search" class="form-control form-control-solid w-250px ps-5" placeholder="Search..." />
                </div>
                <!--end::Search-->
            </h3>            
        </div>
    @* Star search and export card *@

    <div class="card-body py-5">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table id="kt_datatable_example" class="table table-striped">
                    @* table is class name of dataTable *@
                    <thead>
                        <tr class="fw-semibold fs-6 text-gray-800 border-bottom-2 border-gray-200">
                            <th>Book</th>
                            <th>Publisher</th>
                            <th>publishing Date</th>
                            <th>Hall</th>
                            <th style="width:1px;" >Categories</th>
                            <th>Rental</th>
                            <th>Status</th>
                            <th>Action</th> 
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var book in Model)
                        {
                                <tr class="align-middle">
                                <td>
                                    <div class="symbol symbol-60px">
                                            <div class="symbol-label" style="background-image:url(@(book.Img!=null?$"/Images/Book/{book.Img}":"/Images/Book/default.png"))"></div>
                                    </div>
                                        <div>
                                            <a asp-controller="Books"asp-action="Details"asp-route-id="@book.Id">
                                                <span style="position: relative;left: 83px;bottom: 53px;color:royalblue;font-weight: bold;">@book.Author</span>
                                            </a>
                                            <span style="position: relative;left: -9px;bottom: 31px;color:lightslategray ">@book.Publisher</span>
                                        </div>
                                </td>
                                <td>@book.Publisher</td>
                                <td>@book.PublishingDate.ToString("dd MMM yyyy")</td>
                                <td>@book.Hall</td>
                                <td>
                                    @foreach (var category in book.Categories)
                                    {
                                            <span>@category,</span>
                                    }
                                </td>
                                    <td class="align-middle">
                                        <span class="badge text-bg-@(book.IsAvailableForRental?"success":"danger")">
                                            @(book.IsAvailableForRental ? "Available" : "Not Available")
                                        </span>
                                    </td>
                                    <td class="align-middle">
                                    <span class="badge text-bg-@(book.IsDeleted?"danger":"success") ColorStatus">
                                    @(book.IsDeleted ? "Deleted" : "Available")
                                    </span>
                                </td> 
                                 
                                <div class="w-30">

                                    <td class="align-middle">
                                    <button type="button" class="btn btn-sm btn-icon btn-color-primary  btn-active-light-primary" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
                                        <!--begin::Svg Icon | path: icons/duotune/general/gen024.svg-->
                                        <span class="svg-icon svg-icon-2">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="24px" height="24px" viewBox="0 0 24 24">
                                                <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                                    <rect x="5" y="5" width="5" height="5" rx="1" fill="currentColor"></rect>
                                                    <rect x="14" y="5" width="5" height="5" rx="1" fill="currentColor" opacity="0.3"></rect>
                                                    <rect x="5" y="14" width="5" height="5" rx="1" fill="currentColor" opacity="0.3"></rect>
                                                    <rect x="14" y="14" width="5" height="5" rx="1" fill="currentColor" opacity="0.3"></rect>
                                                </g>
                                            </svg>
                                        </span>
                                        <!--end::Svg Icon-->
                                    </button>

                                    <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-800 menu-state-bg-light-primary fw-semibold w-200px py-3" data-kt-menu="true" style="z-index: 107;">

                                        <!--begin::Menu item-->
                                            <div class="menu-item px-3  Edit_Status">
                                            <a asp-controller="Books" asp-action="Edite" asp-route-id="@book.Id" class="menu-link px-3">
                                                <i class="bi bi-pencil-square fs-4"></i>
                                                Edite
                                            </a>
                                        </div>
                                        <!--end::Menu item-->
                                        <!--begin::Menu item-->
                                        <div class="menu-item px-3 my-1 Edit_Status">
                                            <a href="#" class="menu-link px-3 Js-StatusToggle" data-url="/Books/ToggleStatus/@book.Id"><i class="bi bi-trash fs-3"></i>Toggle Status</a>
                                        </div>
                                        <!--end::Menu item-->
                                    </div>

                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <!--begin::Alert-->
            <div class="alert alert-warning d-flex align-items-center p-5">
                <!--begin::Icon-->
                <i class="ki-duotone ki-shield-tick fs-2hx text-success me-4"><span class="path1"></span><span class="path2"></span></i>
                <!--end::Icon-->
                <!--begin::Wrapper-->
                <div class="d-flex flex-column">
                    <!--begin::Title-->
                    <h4 class="mb-1 text-dark"><i style="padding-right:10px" class="bi bi-exclamation-circle fs-3 text-warning"></i>No Books founded!</h4>
                    <!--end::Title-->
                </div>
                <!--end::Wrapper-->
            </div>
            <!--end::Alert-->
        }
    </div>

</div>

